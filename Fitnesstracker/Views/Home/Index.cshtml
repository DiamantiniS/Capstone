@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section text-light" style="background-image: url('/path-to-your-hero-image.jpg'); background-size: cover; padding: 150px 0;">
    <div class="container text-center">
        <h1 class="display-3">Push Yourself</h1>
        <p class="lead">Achieve your fitness goals with precise tracking and personalized plans.</p>
    </div>
</div>

<!-- About App Section -->
<div class="about-section py-5 bg-dark text-light">
    <div class="container text-center">
        <h2>Welcome to Your Fitness Tracker</h2>
        <h3>Track Your Progress</h3>
        <div class="row">
            <div class="col-md-6">
                <img src="/path-to-your-app-image.jpg" class="img-fluid rounded" alt="App Image">
            </div>
            <div class="col-md-6">
                <p>Track your weight, record personal workout milestones, and stay on top of your macronutrient intake.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-weight"></i> Weight Tracking</li>
                    <li><i class="fas fa-dumbbell"></i> Personalized Workout Plans</li>
                    <li><i class="fas fa-stopwatch"></i> Workout Time Tracking</li>
                    <li><i class="fas fa-chart-line"></i> Personal Records Tracking</li>
                    <li><i class="fas fa-apple-alt"></i> Macronutrient and Calorie Control</li>
                </ul>
                <div class="social-icons mt-3">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ready to Start Section -->
<div class="ready-section py-5 text-center bg-light">
    <div class="container">
        <h2>Ready to Start?</h2>
        <p>Sign up now to start your fitness journey</p>
        <a href="/register" class="btn btn-danger btn-lg">Get Started</a>
    </div>
</div>

<!-- What Will We Do Section -->
<div class="program-section py-5 bg-dark text-light">
    <div class="container text-center">
        <h2>Your Workout Plan</h2>
        <div class="row my-4">
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="fas fa-dumbbell fa-3x"></i>
                </div>
                <h4>Workout Plans</h4>
                <p>Customized workouts to help you reach your goals</p>
            </div>
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="fas fa-running fa-3x"></i>
                </div>
                <h4>Time Tracking</h4>
                <p>Measure the time to complete each workout</p>
            </div>
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="fas fa-trophy fa-3x"></i>
                </div>
                <h4>Personal Records</h4>
                <p>Track your achievements and beat your records</p>
            </div>
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="fas fa-apple-alt fa-3x"></i>
                </div>
                <h4>Nutrition</h4>
                <p>Control your macronutrients and calories</p>
            </div>
        </div>
        <div class="calories-section">
            <h3>- 477 Calories</h3>
            <h3>60 Minutes</h3>
        </div>
    </div>
</div>

<!-- Contact Section -->
<div class="contact-section py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h2>Contact Us</h2>
            <p>For More Information</p>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p><i class="fas fa-phone"></i> (123) 456-7890</p>
                <p><i class="fas fa-envelope"></i> info@fitnesstracker.com</p>
                <p><i class="fas fa-map-marker-alt"></i> 123 Fitness Street, Fit City</p>
            </div>
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control mb-2" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control mb-2" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="3" placeholder="Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Footer Section -->
<footer class="footer-section bg-dark text-light py-3">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a href="#" class="text-light">About</a></li>
                    <li class="list-inline-item"><a href="#" class="text-light">Contact</a></li>
                </ul>
                <p class="mt-3 mb-0">&copy; 2024 Fitness Tracker. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</footer>
