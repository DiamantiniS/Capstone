@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<header class="header" id="header">
    <video autoplay loop muted>
        <source src="/Best Workout Music 2023 🔥 Gym Motivation Music Mix 2023.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="container text-center header__content">
        <h1>Track Your Fitness Journey</h1>
        <h2>Your Success Begins Here</h2>
        <p>Monitor your weight, set your goals, and track your workouts</p>
        <a href="#register" class="btn btn__primary">Get Started</a>
    </div>
</header>

<!-- About Section -->
<div class="about-section py-5 bg-dark text-light">
    <div class="container text-center">
        <h2>Welcome to Your Fitness Tracker</h2>
        <h3>Track Your Progress</h3>
        <div class="row">
            <div class="col-md-6">
                <img src="/img/allenamento-donna-palestra-removebg-preview.png" class="img-fluid rounded" alt="App Image">
            </div>
            <div class="col-md-6">
                <p>Track your weight, record personal workout milestones, and stay on top of your macronutrient intake.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-bar-chart"></i> Weight Tracking</li>
                    <li><i class="bi bi-activity"></i> Personalized Workout Plans</li>
                    <li><i class="bi bi-stopwatch"></i> Workout Time Tracking</li>
                    <li><i class="bi bi-trophy"></i> Personal Records Tracking</li>
                    <li><i class="bi bi-apple"></i> Macronutrient and Calorie Control</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Ready to Start Section -->
<div class="ready-section py-5 text-center bg-light" id="register">
    <div class="container">
        <h2>Ready to Start?</h2>
        <p>Sign up now to start your fitness journey</p>
        <a href="/register" class="btn btn__primary btn-lg">Get Started</a>
    </div>
</div>

<!-- What Will We Do Section -->
<div class="program-section py-5 bg-dark text-light">
    <div class="container text-center">
        <h2>Your Workout Plan</h2>
        <div class="row my-4">
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="bi bi-activity fa-3x"></i>
                </div>
                <h4>Workout Plans</h4>
                <p>Customized workouts to help you reach your goals</p>
            </div>
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="bi bi-stopwatch fa-3x"></i>
                </div>
                <h4>Time Tracking</h4>
                <p>Measure the time to complete each workout</p>
            </div>
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="bi bi-trophy fa-3x"></i>
                </div>
                <h4>Personal Records</h4>
                <p>Track your achievements and beat your records</p>
            </div>
            <div class="col-md-3">
                <div class="circle-icon mb-3">
                    <i class="bi bi-apple fa-3x"></i>
                </div>
                <h4>Nutrition</h4>
                <p>Control your macronutrients and calories</p>
            </div>
        </div>
    </div>
</div>

<section class="progress-section py-5 bg-light text-center">
    <div class="container">
        <h2>Your Fitness Journey</h2>
        <div class="row justify-content-center">
            <!-- Progress Circle -->
            <div class="col-md-3">
                <div class="progress-circle">
                    <svg viewBox="0 0 36 36" class="circular-chart">
                        <path class="circle-bg"
                              d="M18 2.0845
                                 a 15.9155 15.9155 0 0 1 0 31.831
                                 a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <path class="circle"
                              stroke-dasharray="70, 100"
                              d="M18 2.0845
                                 a 15.9155 15.9155 0 0 1 0 31.831
                                 a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <text x="18" y="20.35" class="percentage">70%</text>
                    </svg>
                    <h4>Workouts Completed</h4>
                </div>
            </div>

            <!-- Achievement Badges -->
            <div class="col-md-3">
                <div class="achievement-badges">
                    <img src="/img/badge-1.png" alt="Achievement Badge" class="img-fluid mb-2">
                    <h4>New Record!</h4>
                    <p>2000 Calories Burned</p>
                </div>
            </div>

            <!-- Goal Tracking Accordion -->
            <div class="col-md-3">
                <div class="goal-tracking">
                    <h4>Current Goals</h4>
                    <div class="accordion" id="goalAccordion">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#goal1" aria-expanded="true" aria-controls="goal1">
                                        Lose 5kg
                                    </button>
                                </h5>
                            </div>
                            <div id="goal1" class="collapse show" aria-labelledby="headingOne" data-parent="#goalAccordion">
                                <div class="card-body">
                                    Progress: 3kg down, 2kg to go!
                                </div>
                            </div>
                        </div>
                        <!-- More goals can be added similarly -->
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



<!-- Footer Section -->
<footer class="footer-section bg-dark text-light py-3">
    <div class="container text-center">
        <p>&copy; 2024 Fitness Tracker. All Rights Reserved.</p>
    </div>
</footer>
