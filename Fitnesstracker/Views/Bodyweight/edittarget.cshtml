@model BodyweightTarget

@{
    ViewData["Title"] = "Edit Target";
}

<div class="container my-5">
    <div class="card w-50 mx-auto">
        <div class="card-header">
            <h4 class="card-title">Edit Target</h4>
        </div>
        <form asp-controller="Bodyweight" asp-action="EditTarget" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label>Weight</label>
                    <input class="form-control" name="TargetWeight" type="number" min="1" max="300" step="0.1" value="@Model.TargetWeight" required />
                </div>
                <div class="form-group">
                    <label>Target Date</label>
                    <input class="form-control" name="TargetDate" type="date" value="@Model.TargetDate.ToString("yyyy-MM-dd")" required />
                </div>
            </div>
            <div class="card-footer text-right">
                <a asp-controller="Bodyweight" asp-action="Summary" class="btn btn-danger">Cancel</a>
                <input type="submit" class="btn btn__primary" value="Save" />
            </div>
        </form>
    </div>
</div>
