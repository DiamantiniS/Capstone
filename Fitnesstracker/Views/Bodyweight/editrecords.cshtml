@model BodyweightRecord[]

@{
    ViewData["Title"] = "Edit Bodyweight Records";
}

@section Scripts {
    <script src="~/js/Bodyweight/editrecords.js"></script>
}

<div class="container my-5">
    <div class="card">
        <form asp-controller="Bodyweight" asp-action="EditRecords" method="post" onsubmit="return formPreSubmit();">
            <div class="card-header">
                <h4 class="card-title">Edit Bodyweight Records</h4>
            </div>

            <div class="card-body">
                <div class="row">
                    <!-- Input per nuovo record -->
                    <div class="col-md-5 mb-3">
                        <div class="form-group">
                            <label>Weight</label>
                            <input id="NewWeightInput" class="form-control" type="number" min="0" max="300" step="0.1" placeholder="kg" />
                        </div>
                        <div class="form-group">
                            <label>Date</label>
                            <input id="NewDateInput" class="form-control" type="date" onchange="validateDates();" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <button type="button" id="AddNewRowButton" class="btn btn__primary btn-block" onclick="addRowButton_Clicked();">Add Record</button>
                    </div>

                    <!-- Tabella dei record esistenti -->
                    <div class="col-md-7">
                        <div class="table-responsive" style="max-height:400px; overflow:auto;">
                            <table class="table table-dark table-striped">
                                <thead>
                                    <tr>
                                        <th>Weight</th>
                                        <th>Date</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BodyweightRecord record in Model)

                                    {
                                        <tr>
                                            <td><input type="number" min="0" max="300" step="0.1" class="form-control" value="@record.Weight.ToString("F2")" required /></td>
                                            <td><input type="date" class="form-control" value="@record.Date.ToString("yyyy-MM-dd")" required /></td>
                                            <td><a href="#" class="text-danger font-weight-bold" onclick="removeRow(this);"><i class="bi bi-x-circle"></i> Remove</a></td>
                                        </tr>
                                    }
                                    <tr class="d-none" id="NewRowTemplate">
                                        <td><input type="number" min="0" max="300" step="0.1" class="form-control" required /></td>
                                        <td><input type="date" class="form-control" required /></td>
                                        <td><a href="#" class="text-danger font-weight-bold" onclick="removeRow(this);"><i class="bi bi-x-circle"></i> Remove</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-right">
                <input type="submit" class="btn btn__primary" value="Save" onclick="formSubmit_Clicked();" />
                <a asp-action="Summary" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
