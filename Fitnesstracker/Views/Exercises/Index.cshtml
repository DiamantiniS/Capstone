@model IEnumerable<Fitnesstracker.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Exercise</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Muscle Group</th>
            <th>Description</th>
            <th>Video</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.MuscleGroup</td>
                <td>@item.Description</td>
                <td><a href="@item.VideoUrl" target="_blank">Video</a></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
